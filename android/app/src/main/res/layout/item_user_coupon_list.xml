<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:id="@+id/cv_item"
    card_view:cardCornerRadius="0dp">

    <LinearLayout
        android:id="@+id/coupon_lin"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/preference_item" >

        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:orientation="vertical">



                <TextView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/tv_coupon_list_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text=""
                    android:textColor="#666666"
                    android:textSize="18sp" />


            <TextView
                android:id="@+id/tv_coupon_list_item_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:text=""
                android:textColor="#666666"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tv_coupon_list_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:text=""
                android:textColor="#FC9B31"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@mipmap/coupon_normal_bg"
            android:gravity="center">
            <TextView
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp"
                android:text="Â¥"
                android:textSize="30dp"
               />
            <TextView
                android:id="@+id/tv_coupon_list_item_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="45dp" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>

