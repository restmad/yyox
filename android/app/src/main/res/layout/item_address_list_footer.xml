<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:id="@+id/cv_item_address"
    card_view:cardCornerRadius="0dp">

    <RelativeLayout
        android:id="@+id/rl_item_address_list_footer"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="@drawable/preference_item"
        android:clickable="true" >

        <ImageView
            android:id="@+id/iv_item_address_list_footer_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:textColor="#6c7883"
            android:textSize="18sp"
            android:src="@mipmap/add"/>

        <TextView
            android:id="@+id/tv_item_address_list_footer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/iv_item_address_list_footer_add"
            android:text="@string/user_address_new"
            android:textColor="#333333"
            android:textSize="16sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="20dp"
            android:background="#00000000"
            android:contentDescription=""
            android:src="@mipmap/arrow" />
    </RelativeLayout>

</android.support.v7.widget.CardView>

